<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RDPro.ViewModels"
             xmlns:views="clr-namespace:RDPro.Views.Converters"
             xmlns:conv="clr-namespace:RDPro.Converters"
             x:Class="RDPro.Views.AllConnectionsPage">

    <UserControl.Resources>
        <views:ConnectionNameConverter x:Key="ConnNameConv" />
        <views:ConnectionAddressConverter x:Key="ConnAddrConv" />
    <conv:StringToBoolConverter x:Key="StringToBool" />
    <conv:StringToBoolConverter x:Key="StringToBool_Inverted" Invert="True" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:AllConnectionsViewModel/>
    </Design.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Spacing="10"
                    Margin="10,5">
            
            <Button Content="Add Connection"
                    Width="150"
                    Command="{Binding OpenNewConnectionDialogCommand}" />
            
            <Button Content="Import Connections"
                    Width="150"
                    Command="{Binding ImportConnectionsCommand}" />
            
            <Button Content="Remove Connection"
                    Width="150"
                    Command="{Binding RemoveConnectionCommand}" />
        </StackPanel>

        <Grid>
            
            <ListBox x:Name="ConnectionsListBox" ItemsSource="{Binding Connections}"
                     IsVisible="{Binding HasConnections}" 
                     Margin="10,0,10,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid PointerPressed="Item_PointerPressed" ContextRequested="Item_ContextRequested" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Connect" Command="{Binding DataContext.ConnectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    <MenuItem Header="Connect Without RD Gateway" Command="{Binding DataContext.ConnectWithoutGatewayCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    <Separator />
                                    <MenuItem Header="Edit Connection" Command="{Binding DataContext.EditConnectionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    <Separator />
                                    <MenuItem Header="View .RDPX File" Command="{Binding DataContext.ShowRdpXFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    <MenuItem Header="View .RDP File" Command="{Binding DataContext.ShowRdpFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    <Separator />
                                    <MenuItem Header="Delete" Click="ContextMenu_Delete_Click" />
                                </ContextMenu>
                            </Grid.ContextMenu>

                            <Grid Grid.Column="0" Margin="6,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Primary: the friendly display name (or the address fallback) -->
                                <TextBlock Grid.Row="0" Text="{Binding Converter={StaticResource ConnNameConv}}" FontWeight="Bold" VerticalAlignment="Center" />

                                <!-- Secondary: hostname/address shown only when there is a friendly name (ConnectionName) -->
                                <TextBlock Grid.Row="1" Text="{Binding Converter={StaticResource ConnAddrConv}}" Opacity="0.7" FontStyle="Italic" FontSize="12"
                                           IsVisible="{Binding ConnectionName, Converter={StaticResource StringToBool}}" />
                            </Grid>

                            <!-- Hamburger actions button positioned in far-right column -->
                            <Button Grid.Column="2" Content="â‹®" Width="30" Margin="8,0" VerticalAlignment="Center" Click="Item_ActionsButtonClick" ToolTip.Tip="Actions" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="You Have No Connections, To Get Started Add or Import One"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       IsVisible="{Binding NoConnections}"/> 
        </Grid>
    </DockPanel>
</UserControl>
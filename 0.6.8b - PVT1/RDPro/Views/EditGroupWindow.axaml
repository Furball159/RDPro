<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RDPro.ViewModels"
        mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="150"
        x:Class="RDPro.Views.EditGroupWindow"
        x:DataType="vm:EditGroupViewModel"
        Title="Edit Group"
        CanResize="False" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

    <StackPanel Spacing="10" Margin="15">
        <TextBlock Text="Group Name:"/>
        <TextBox Text="{Binding Name}" MinWidth="300"/>
        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" Classes="accent"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
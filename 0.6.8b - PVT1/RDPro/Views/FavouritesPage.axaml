<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RDPro.ViewModels"
             xmlns:conv="clr-namespace:RDPro.Converters"
             x:Class="RDPro.Views.FavouritesPage">
    <UserControl.Resources>
        <conv:StringToBoolConverter x:Key="StringToBool" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:FavouritesViewModel />
    </Design.DataContext>

    <DockPanel>
        <Border DockPanel.Dock="Top" Padding="10,5" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ControlBorderBrush}">
            <Grid ColumnDefinitions="*" RowDefinitions="Auto" VerticalAlignment="Center">
                
                <!-- Search Box -->
                <TextBox Grid.Column="0"
                         Watermark="Search favourites..."
                         Text="{Binding SearchText, Mode=TwoWay}"
                         VerticalAlignment="Center"
                         Margin="0,0,20,0" />
            </Grid>
        </Border>

        <Grid>
            <Grid.Resources>
                <conv:CountToBoolConverter x:Key="CountToBool" />
                <conv:CountToBoolConverter x:Key="CountToBool_Inverted" Invert="True" />
            </Grid.Resources>
            <ListBox ItemsSource="{Binding Favourites}" Margin="10" Name="FavouritesListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid PointerPressed="Item_PointerPressed" ContextRequested="Item_ContextRequested" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="6,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding ConnectionName}" FontWeight="Bold" VerticalAlignment="Center" />
                                <TextBlock Grid.Row="1" Text="{Binding ServerAddress}" Opacity="0.7" FontStyle="Italic" FontSize="12" IsVisible="{Binding ConnectionName, Converter={StaticResource StringToBool}}" />
                            </Grid>

                            <Button Grid.Column="2" Content="â‹®" Width="30" Margin="8,0" VerticalAlignment="Center" Click="Item_ActionsButtonClick" ToolTip.Tip="Actions" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Text="You Have no Connections Favourited, go to all connections and favourite one"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       IsVisible="{Binding Favourites.Count, Converter={StaticResource CountToBool_Inverted}}" />
        </Grid>
    </DockPanel>
</UserControl>
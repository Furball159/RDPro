<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:RDPro.Views"
        xmlns:vm="clr-namespace:RDPro.ViewModels"
        x:Class="RDPro.MainWindow"
        Width="900" Height="600"
        Title="RD Pro">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid>
        <TabControl>
            <TabItem Header="All Connections">
                <views:AllConnectionsPage DataContext="{Binding AllConnectionsVM}" />
            </TabItem>
            <TabItem Header="Favourites">
                <views:FavouritesPage DataContext="{Binding FavouritesVM}" />
            </TabItem>
            <TabItem Header="History">
                <views:HistoryPage />
            </TabItem>
            <TabItem Header="Gateways">
                <views:GatewayAcc/>
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsPage />
            </TabItem>
        </TabControl>
    </Grid>
</Window>